generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URI")
}

model Block {
  id     String        @id @default(auto()) @map("_id") @db.ObjectId
  hash   String        @unique
  number BigInt        @unique
  txs    Transaction[]
}

model Transaction {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  hash        String @unique
  from        String
  to          String
  nonce       BigInt
  amount      BigInt
  blockNumber BigInt
  blockId     String @db.ObjectId
  block       Block  @relation(fields: [blockId], references: [id])
}
